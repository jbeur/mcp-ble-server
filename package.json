{
  "name": "mcp-ble-server",
  "version": "1.0.1",
  "description": "MCP BLE Server for AI Assistant BLE Communication",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:security": "jest tests/performance/security.test.js",
    "test:deployment": "jest tests/deployment",
    "test:smoke": "jest tests/smoke",
    "test:all": "jest tests/unit && jest tests/integration && jest tests/performance && jest tests/deployment && jest tests/smoke",
    "test:critical": "CI_CRITICAL_ONLY=true jest",
    "test:update-failing": "node scripts/test-manager.js update-failing",
    "test:report": "node scripts/test-manager.js generate-report",
    "test:ci": "npm run test:critical && npm run test:report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rm -rf dist && mkdir -p dist && cp -r src/* dist/ && cp package.json dist/ && cp ecosystem.config.js dist/ && npm install --production --prefix dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run test:smoke",
    "prepare": "husky install",
    "test:stable": "CI_CRITICAL_ONLY=true jest",
    "test:unstable": "jest --selectProjects=unstable",
    "test:regression": "npm run test:stable && node scripts/compare-test-results.js",
    "precommit": "npm run test:regression"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@babel/runtime": "^7.24.0",
    "autocannon": "^7.15.0",
    "aws-sdk": "^2.1564.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.3",
    "supertest": "^6.3.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.24.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-security": "^1.7.1",
    "globals": "^16.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^15.2.2",
    "typescript-eslint": "^8.29.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
